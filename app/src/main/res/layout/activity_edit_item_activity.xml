<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Item_Activity"
    android:orientation="vertical"

    >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:background="@color/aqua"
        android:padding="10dp">



        <TextView
            android:id="@+id/tv_arrowEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_columnWeight="1"
            android:textSize="40sp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3"
            android:text="My Inventory"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />





    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
>

        <TextView
            android:id="@+id/tv_nameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"
            android:layout_marginStart="10dp"

            />

        <EditText
            android:id="@+id/et_itNameEdit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="  Item Name"
            android:background="@drawable/borders"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:imeOptions="actionNext"/>

        <TextView
            android:id="@+id/tv_descEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:id="@+id/et_itDescEdit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="  Item Description"
            android:background="@drawable/borders"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:maxLines="7"
            android:gravity="center"
            android:imeOptions="actionNext"
            />

        <TextView
            android:id="@+id/tv_QuantityEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="30sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            />

        <EditText
            android:id="@+id/et_QuantityEdit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="  Item Quantity"
            android:background="@drawable/borders"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:imeOptions="actionNext"/>

        <Button
            android:id="@+id/btn_submitEdit"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
